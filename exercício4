 </STyle>
    <script language="javascript">
        var base, altura, area;
        base =  parseInt(window.prompt("Digite o tamanho da base do retângulo"));
        altura =  parseInt(window.prompt("Digite o tamanho da altura do retângulo"));
        area = base * altura /2;
        document.write("<h2>A area do retângulo é de ", area ,"<h2>" );
     

    </script>
  
