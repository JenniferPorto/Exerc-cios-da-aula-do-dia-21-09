    <script language="javascript">
        var diagonal, area, lado ;
        lado  = parseInt( window.prompt("Digite o lado do quadrado"));
        diagonal = parseInt( window.prompt("Digite o valor da diagonal"));
        area = lado* 4 * diagonal *2 /2;
        document.write("<h1>A area do quadrado é de ", area, "</h1>");
     

    </script>
  
