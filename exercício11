<script language="javascript">
        var P1, P2, media;
        P1 = parseInt(window.prompt("Digite o valor de P1"));
       P2= parseInt(window.prompt("Digite o valor de P2"));
       media = (P1 + P2) / 3
        if(media>=6)
        document.write("<h2>voce foi aprovado com a média  ",media,"<h2>");
        else(media<6)
        document.write("<h2>voce foi reprovado com a média  ",media,"<h2>");
      
       

      
     

    </script>
  
