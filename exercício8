        var grausC, grausF;
        grausC= window.prompt("Digite o valor da temperatura em graus Celsius");
        grausC = eval(grausC);
        grausF= ((grausC)/(5) * (9) +(32));
       { 
           document.write("<h1>A temperatura em Fahrenheit é ",grausF, "°</h1>" );
       }
      
     

