        var aresta, lado, area;
        lado=  parseInt(window.prompt("Digite o lado do quadrado"));
        aresta=  parseInt(window.prompt("Digite o tamanho da aresta do quadrado"));
        area = lado* 4 * aresta * 4;
        document.write("<h1>A area do retângulo é de ", area, "</h1>");
     

