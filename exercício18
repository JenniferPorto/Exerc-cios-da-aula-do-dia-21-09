          document.writeln("<table border = '1'> <tr> <td>",ii, " X 1 = <b>", ii ,"</b></td> <td colspan = '3'></td></tr> <tr><td rowspan = '3'></td>");
          for (cont1 = 2; cont1 < 5; cont1++) 
