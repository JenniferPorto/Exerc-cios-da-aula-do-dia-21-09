    <script language="javascript">
        var valor1, valor2, valor3, valor4, media;
       valor1 =  parseInt(window.prompt("Digite o primeiro valor"));
       valor2 =  parseInt(window.prompt("Digite o segundo valor"));
       valor3 = parseInt( window.prompt("Digite o terceiro valor"));
       valor4 =  parseInt(window.prompt("Digite o quarto valor"));
       media = (valor1 + valor2 +valor3 +valor4)/4;

       { 
           document.write("<h2>A média é ", media,"<h2>" );
       }
      
     

    </script>
  
